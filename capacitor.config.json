{
  "appId": "com.neurocrest.app",
  "appName": "NeuroCrest",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "cleartext": false,
    "androidScheme": "https",
    "allowNavigation": []
  },
  "android": { "allowMixedContent": false },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#000000",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": true,
      "spinnerColor": "#ffffff"
    }
  }
}
